<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loadingScreenFragment">

    <fragment
        android:id="@+id/loadingScreenFragment"
        android:name="com.kristina.feedthebeast.LoadingScreenFragment"
        android:label="fragment_loading_screen"
        tools:layout="@layout/fragment_loading_screen" >
        <action
            android:id="@+id/action_loadingScreenFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.kristina.feedthebeast.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_beastFragment"
            app:destination="@id/beastFragment" />
    </fragment>
    <fragment
        android:id="@+id/beastFragment"
        android:name="com.kristina.feedthebeast.BeastFragment"
        android:label="fragment_beast"
        tools:layout="@layout/fragment_beast" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.kristina.feedthebeast.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/rulesFragment"
        android:name="com.kristina.feedthebeast.RulesFragment"
        android:label="fragment_rules"
        tools:layout="@layout/fragment_rules" />
</navigation>